{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@global/*": [
        "asset/global/*"
      ],
      "@component/*": [
        "component/*"
      ],
      "@s3/*": [
        "extern/s3/*"
      ],
      "@user/*": [
        "component/user/*"
      ],
      "@conversation/*": [
        "component/conversation/*"
      ],
      "@vertex/*": [
        "component/vertex/*"
      ],
      "@edge/*": [
        "component/edge/*"
      ],
      "@middleware/*": [
        "middleware/*"
      ],
      "@meeting/*": [
        "component/meeting/*"
      ],
      "@auth/*": [
        "auth/*"
      ],
      "@openvidu/*": [
        "extern/openvidu/*"
      ]
    },
    "exclude": [
      "node_modules",
      "test",
      "dist",
      "**/*spec.ts"
    ]
  }
}