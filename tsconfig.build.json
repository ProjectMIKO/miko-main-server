{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@global/*": [
        "global/*"
      ],
      "@component/*": [
        "component/*"
      ],
      "@filesystem/*": [
        "filesystem/*"
      ],
      "@user/*": [
        "component/user/*"
      ],
      "@conversation/*": [
        "component/conversation/*"
      ],
      "@vertex/*": [
        "component/vertex/*"
      ],
      "@edge/*": [
        "component/edge/*"
      ],
      "@middleware/*": [
        "middleware/*"
      ],
      "@meeting/*": [
        "meeting/*"
      ],
      "@auth/*": [
        "auth/*"
      ],
      "@openvidu/*": [
        "openvidu/*"
      ],
      "@controller/*": [
        "component/user/controller/*",
        "component/conversation/controller/*",
        "component/vertex/controller/*",
        "component/edge/controller/*",
        "middleware/controller/*",
        "filesystem/controller/*",
        "meeting/controller/*",
        "auth/controller/*",
        "openvidu/controller/*"
      ],
      "@service/*": [
        "component/user/service/*",
        "component/conversation/service/*",
        "component/vertex/service/*",
        "component/edge/service/*",
        "middleware/service/*",
        "filesystem/service/*",
        "meeting/service/*",
        "auth/service/*",
        "openvidu/service/*"
      ],
      "@dto/*": [
        "component/user/dto/*",
        "component/conversation/dto/*",
        "component/vertex/dto/*",
        "component/edge/dto/*",
        "middleware/dto/*",
        "filesystem/dto/*",
        "meeting/dto/*",
        "auth/dto/*",
        "openvidu/dto/*"
      ],
      "@schema/*": [
        "component/user/schema/*",
        "component/conversation/schema/*",
        "component/vertex/schema/*",
        "component/edge/schema/*",
        "meeting/schema/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts"
  ]
}